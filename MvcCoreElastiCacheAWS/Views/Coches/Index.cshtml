    @model IEnumerable<MvcCoreElastiCacheAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}


<h2>@ViewBag.MENSAJE</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if(Model != null)
{
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCoche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                <img src="@item.Imagen" style="max-height:120px; max-width:100px"/>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.IdCoche }) |
                    @if (ViewBag.MENSAJE == "Favoritos")
                    {
                        @Html.ActionLink("RemoveFav", "RemoveFav", new { id=item.IdCoche })
                    }
                    else
                    {
                        @Html.ActionLink("AddFav", "AddFav", new { id=item.IdCoche })                         
                    }
            </td>
        </tr>
}
    </tbody>
</table>

}